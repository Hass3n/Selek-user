<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/input"
    android:layoutDirection="rtl"
    android:layout_marginTop="24dp"
    >

    <TextView
        android:id="@+id/old_trip_place_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:fontFamily="@font/hacen_tunisia"

        android:text="شلبي"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/old_trip_date_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/old_trip_place_txt"
        android:gravity="center"
        android:text="22-10-2021"
        android:layout_margin="8dp"
        android:textColor="@color/black"
        android:textSize="10sp"
         />


    <TextView
        android:id="@+id/old_trip_price_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/old_trip_place_txt"
        android:gravity="center"
        android:text="25 جنيه "
        android:layout_marginTop="8dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        />


</RelativeLayout>